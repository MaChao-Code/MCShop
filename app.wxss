@import "./styles/iconfont.wxss";

/* 在微信小程序中，不支持通配符 '*' */
page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;

}

/* 
主题颜色 通过变量实现
1 less中，存在变量支持
2 远程css和wxss也是支持变量的 
*/
page{
    /* 定义主题颜色 */
    --themeColor:#EE1C1B;
    /* 定义字体大小 */
    font-size: 28rpx;
}

image{
    width: 100%;
}